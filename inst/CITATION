bibentry("Manual",
         title = "usethat: Analytic Project Setup and Development",
         author = person("Harel", "Lustiger"),
         organization = "Tidylab",
         address      = "Auckland, New Zealand",
         year         = version$year,
         url          = "https://github.com/tidylab/usethat",

         textVersion =
         paste("Harel Lustiger (", version$year, "). ",
               "usethat: Analytic Project Setup and Development. ",
               "Tidylab, Auckland, New Zealand. ",
               "URL https://github.com/tidylab/usethat.",
               sep=""),

         mheader = "To cite R in publications use:",

	 mfooter =
         paste("We have invested a lot of time and effort in creating usethat,",
          "please cite it when using it for data analysis.",
	  "See also", sQuote("citation(\"pkgname\")"),
	  "for citing R packages.", sep = " ")
	)
